{# barre de navigation  #}
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="{{ path('app_default_index') }}">
        <i class="fas fa-home"></i>
        {% trans %}Accueil Boutique{% endtrans %}
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="{% trans %}Toggle navigation{% endtrans %}">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_boutique') }}">
                    <i class="fas fa-store"></i>
                    {% trans %}Boutique{% endtrans %}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_panier') }}">
                    <i class="fas fa-shopping-cart"></i>
                    {% trans %}Panier{% endtrans %}
                    <span class="badge badge-light">{{ render(controller('App\\Controller\\PanierController::nombreProduits')) }}</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_default_contact') }}">
                    <i class="fas fa-comments"></i>
                    {% trans %}Contact{% endtrans %}
                </a>
            </li>
        </ul>
        <ul class="navbar-nav my-0">
            <li class="nav-item dropdown">
                <span class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {% if app.request.locale == 'fr' %}
                        <img src="/info/R401/images/locale/fr.png" alt="Fr">
                    {% elseif app.request.locale == 'en' %}
                        <img src="/info/R401/images/locale/en.png" alt="En">
                    {% else %}
                        <img src="/info/R401/images/locale/de.png" alt="De">
                    {% endif %}
                </span>
                <div class="dropdown-menu" aria-labelledby="dropdown01" style="min-width: 5rem;">
                    {% if app.request.locale != 'fr' %}
                        <a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'fr'})) }}">
                            <img src="/info/R401/images/locale/fr.png" alt="fr">
                        </a>
                    {% endif %}
                    {% if app.request.locale != 'en' %}
                        <a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}">
                            <img src="/info/R401/images/locale/en.png" alt="en">
                        </a>
                    {% endif %}
                    {% if app.request.locale != 'de' %}
                        <a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'de'})) }}">
                            <img src="/info/R401/images/locale/de.png" alt="de">
                        </a>
                    {% endif %}
                </div>
            </li>
        </ul>
    </div>
</nav>

